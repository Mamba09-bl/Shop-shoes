<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Travel Booking Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-purple-500 via-pink-500 to-red-500 min-h-screen flex items-center justify-center font-sans">

  <div class="login-container bg-white rounded-3xl shadow-2xl p-8 max-w-md w-full mx-4">
    <div class="login-card">
      <div class="login-header flex items-center space-x-4 mb-8">
        <div class="logo">
          <svg width="48" height="48" viewBox="0 0 40 40" fill="none" class="rounded-lg bg-blue-600 p-2">
            <rect width="40" height="40" rx="12" fill="#2563EB" />
            <path d="M12 16l8-4 8 4v12l-8 4-8-4V16z" stroke="white" stroke-width="2" fill="none" />
            <circle cx="20" cy="20" r="3" fill="white" />
          </svg>
        </div>
        <h1 class="text-4xl font-extrabold text-blue-900 select-none">NEO STORE</h1>
      </div>

      <form id="loginForm" action="/users/signUp" method="post" novalidate class="space-y-6">

        <div class="form-group relative">
          <input
            type="text"
            id="username"
            name="username"
            placeholder=" "
            required
            class="peer block w-full rounded-lg border border-gray-300 px-4 pt-6 pb-2 text-gray-900 focus:border-blue-600 focus:ring-2 focus:ring-blue-400 focus:outline-none transition"
          />
          <label
            for="username"
            class="absolute left-4 top-2 text-gray-500 text-sm peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-blue-600 transition-all cursor-text"
            >UserName</label
          >
        </div>

        <div class="form-group relative">
          <input
            type="email"
            id="email"
            name="email"
            placeholder=" "
            required
            autocomplete="email"
            class="peer block w-full rounded-lg border border-gray-300 px-4 pt-6 pb-2 text-gray-900 focus:border-pink-600 focus:ring-2 focus:ring-pink-400 focus:outline-none transition"
          />
          <label
            for="email"
            class="absolute left-4 top-2 text-gray-500 text-sm peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-pink-600 transition-all cursor-text"
            >Email address</label
          >
          <span class="error-message text-red-500 text-xs mt-1 block" id="emailError"></span>
        </div>

        <div class="form-group relative">
          <input
            type="password"
            id="password"
            name="password"
            placeholder=" "
            required
            class="peer block w-full rounded-lg border border-gray-300 px-4 pt-6 pb-2 text-gray-900 focus:border-purple-600 focus:ring-2 focus:ring-purple-400 focus:outline-none transition"
          />
          <label
            for="password"
            class="absolute left-4 top-2 text-gray-500 text-sm peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-focus:top-2 peer-focus:text-sm peer-focus:text-purple-600 transition-all cursor-text"
            >Password</label
          >
          <button
            type="button"
            class="absolute right-3 top-3 text-gray-500 hover:text-purple-600 focus:outline-none"
            id="passwordToggle"
            aria-label="Toggle password visibility"
          >
            <svg
              class="eye-icon"
              width="20"
              height="20"
              viewBox="0 0 18 18"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M9 3C4.5 3 1.05 6.21 0.5 9c.55 2.79 4 6 8.5 6s7.95-3.21 8.5-6c-.55-2.79-4-6-8.5-6zm0 10a4 4 0 110-8 4 4 0 010 8zm0-6.5a2.5 2.5 0 100 5 2.5 2.5 0 000-5z"
                fill="currentColor"
              />
            </svg>
          </button>
          <span class="error-message text-red-500 text-xs mt-1 block" id="passwordError"></span>
        </div>

        <div class="form-options flex justify-between items-center text-gray-600 text-sm">
          <label class="checkbox-wrapper flex items-center space-x-2 cursor-pointer select-none">
            <input
              type="checkbox"
              id="remember"
              name="remember"
              class="h-4 w-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500"
            />
            <span>Remember me</span>
          </label>
          <a href="#" class="forgot-link text-purple-600 hover:underline">Forgot password?</a>
        </div>

        <button
          type="submit"
          class="login-btn w-full bg-gradient-to-r from-purple-600 to-pink-500 hover:from-pink-500 hover:to-purple-600 text-white font-bold py-3 rounded-lg flex justify-center items-center space-x-2 shadow-lg transition"
        >
          <span class="btn-text">Sign In</span>
          <div class="btn-loader hidden">
            <svg
              class="animate-spin"
              width="20"
              height="20"
              viewBox="0 0 20 20"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <circle
                cx="10"
                cy="10"
                r="8"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-dasharray="32"
                stroke-dashoffset="32"
              >
                <animate
                  attributeName="stroke-dashoffset"
                  dur="1s"
                  values="32;0"
                  repeatCount="indefinite"
                />
              </circle>
            </svg>
          </div>
        </button>
      </form>
    </div>
  </div>

  <script src="../../shared/js/form-utils.js"></script>
  <script src="js/style.js"></script>

  <script>
    // Password toggle functionality
    const toggleBtn = document.getElementById('passwordToggle');
    const passwordInput = document.getElementById('password');

    toggleBtn.addEventListener('click', () => {
      if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
      } else {
        passwordInput.type = 'password';
      }
    });
  </script>
</body>
</html>
