<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Image Showcase</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">

  <% if (home.length > 0) { 
    const mainImage = home[0].image; %>

    <div class="flex flex-col md:flex-row items-center gap-8 max-w-5xl p-4 bg-white shadow-xl rounded-xl">

      <!-- Left Side Thumbnails -->
      <div class="flex md:flex-col gap-4">
        <% home.forEach((pro)=>{ %>
          <div class="w-24 h-24 md:w-32 md:h-32 overflow-hidden rounded-lg shadow cursor-pointer border-2 border-transparent hover:border-blue-500">
            <img 
              src="/images/uploads/<%= pro._id %>" 
              alt="" 
              class="w-full h-full object-cover thumbnail"
              data-image="/images/uploads/<%= mainImage %>"
            />

            
          </div>
          <div class="w-24 h-24 md:w-32 md:h-32 overflow-hidden rounded-lg shadow cursor-pointer border-2 border-transparent hover:border-blue-500">
            <img 
              src="/images/uploads/<%= pro.image %>" 
              alt="" 
              class="w-full h-full object-cover thumbnail"
              data-image="/images/uploads/<%= mainImage %>"
            />

            
          </div>


          <div class="w-24 h-24 md:w-32 md:h-32 overflow-hidden rounded-lg shadow cursor-pointer border-2 border-transparent hover:border-blue-500">
            <img 
              src="/images/uploads/<%= pro.image %>" 
              alt="" 
              class="w-full h-full object-cover thumbnail"
              data-image="/images/uploads/<%= mainImage %>"
            />

            
          </div>
    <% }) %>
      </div>

      <!-- Main Image -->
      <div class="flex-1 max-w-xl overflow-hidden rounded-2xl shadow-lg">
        <img 
          id="mainImage"
          src="/images/uploads/<%= mainImage %>" 
          alt="Main Display" 
          class="w-full h-[400px] object-cover"
        />
      </div>

    </div>

    <!-- Script for switching image -->
    <script>
      const thumbnails = document.querySelectorAll('.thumbnail');
      const mainImage = document.getElementById('mainImage');

      thumbnails.forEach(thumb => {
        thumb.addEventListener('click', () => {
          const newSrc = thumb.getAttribute('data-image');
          mainImage.setAttribute('src', newSrc);
        });
      });
    </script>

  <% } else { %>
    <p class="text-center text-gray-500">No image found.</p>
  <% } %>

</body>
</html>
